<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Civilite</th>
      <th>Nomdusage</th>
      <th>Nomdefamille</th>
      <th>Communnenaissance</th>
      <th>Paysnaissance</th>
      <th>Dptnaissance</th>
      <th>Tel</th>
      <th>Mobile</th>
      <th>Email</th>
      <th>Observations</th>
      <th>Piecej</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.user_id %></td>
        <td><%= person.civilite %></td>
        <td><%= person.nomdusage %></td>
        <td><%= person.nomdefamille %></td>
        <td><%= person.communnenaissance %></td>
        <td><%= person.paysnaissance %></td>
        <td><%= person.dptnaissance %></td>
        <td><%= person.tel %></td>
        <td><%= person.mobile %></td>
        <td><%= person.email %></td>
        <td><%= person.observations %></td>
        <td><%= person.piecej %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

